{
    "name": "docs-core-textarea",
    "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/docs/core/textarea",
    "projectType": "library",
    "prefix": "fundamental-ngx",
    "targets": {
        "e2e": {
            "executor": "@fundamental-ngx/nx-plugin:e2e-test",
            "options": {
                "e2eFiles": ["libs/docs/core/textarea/e2e/**/*.e2e-spec.ts"],
                "devServerTarget": "docs:serve:e2e"
            },
            "outputs": ["{workspaceRoot}/allure-results/docs-core-textarea"]
        },
        "extract-compodoc": {
            "executor": "@fundamental-ngx/nx-plugin:compodoc",
            "options": {
                "outputPath": "libs/docs/core/textarea/docs.json",
                "entities": [
                    "FormControlComponent",
                    "FormGroupComponent",
                    "FormItemComponent",
                    "FormLabelComponent",
                    "FormHeaderComponent",
                    "FormLegendDirective",
                    "FormMessageComponent",
                    "FormSetDirective",
                    "FormInputMessageGroupComponent"
                ]
            },
            "outputs": ["{options}.outputPath"],
            "dependsOn": ["core:compodoc"]
        }
    },
    "tags": ["type:lib", "scope:docs"]
}
